pragma solidity ^0.8.0;

contract SimpleContract {
    // Variables
    uint public number;
    string public string;
    bool public bool;
    address public address;

    // Setter functions
    function setNumber(uint _value) public returns (uint) {
        number = _value;
        return number;
    }
     function setString(string memory _value) public returns (string memory) {
        string = _value;
        return string;
    }
      function setBool(bool _value) public returns (bool) {
        bool = _value;
        return bool;
    } 
      function setAddress(address _value) public returns (address) {
        address = _value;
        return address;
    }
    // Getter functions
    function getNumber() public view returns (uint) {
        return number;
    }

    function getString() public view returns (string memory) {
        return string;
    }

    function getBool() public view returns (bool) {
        return bool;
    }
    function getAddress() public view returns (address) {
        return address;
    }
}
